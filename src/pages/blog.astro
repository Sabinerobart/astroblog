---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPostNav from "../components/BlogPostNav.astro";
import { Frontmatter } from "../types";
import "../styles/global.css";

const allPosts = await Astro.glob<Frontmatter>("../pages/posts/*.md");

const pageTitle = "Ze Blog";
---

<BaseLayout pageTitle={pageTitle}>
  <ul>
    {
      allPosts.map((eachPost) => {
        const post = eachPost.frontmatter;
        return <BlogPostNav url={post.url} title={post.title} />;
      })
    }
  </ul>
</BaseLayout>
